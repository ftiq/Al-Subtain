<odoo>
    <template id="appointment_extra_info_form" name="Appointment Extra Info Form">
        <t t-call="website.layout">
            <div class="container my-5">
                <h2 class="mb-3">معلومات إضافية للموعد</h2>
                <p><strong>الموعد:</strong> <t t-esc="event.name"/></p>
                <p><strong>الخدمة:</strong> <t t-esc="appointment_type.product_id.name if appointment_type.product_id else ''"/></p>

                <form action="/appointment/extra-info/save" method="POST" enctype="multipart/form-data">
                    <input type="hidden" name="event_id" t-att-value="event.id"/>
                    <div class="form-group">
                        <label>رفع مرفق (اختياري)</label>
                        <input type="file" name="attachment_file" class="form-control"/>
                    </div>
                    <button type="submit" class="btn btn-primary mt-3">تأكيد</button>
                </form>
            </div>
        </t>
    </template>
</odoo>