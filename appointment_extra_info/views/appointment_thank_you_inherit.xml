<odoo>
    <template id="appointment_thank_you_inherit" inherit_id="appointment.appointment_thank_you">
        <xpath expr="//div[contains(@class, 'container')]" position="inside">
            <t t-if="request.params.get('event_id')">
                <a t-attf-href="/appointment/extra-info/{{ request.params.get('event_id') }}" class="btn btn-primary mt-4">
                    متابعة رفع المرفقات وتحديد الخدمة
                </a>
            </t>
        </xpath>
    </template>
</odoo>
