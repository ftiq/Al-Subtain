<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="stock_picking_form_lab_notify" model="ir.ui.view">
        <field name="name">stock.picking.form.lab.notify</field>
        <field name="model">stock.picking</field>
        <field name="inherit_id" ref="stock.view_picking_form"/>
        <field name="arch" type="xml">
            <xpath expr="//header" position="inside">
                <button name="action_notify_lab" type="object" class="btn-primary"
                        string="إشعار المختبر"
                        groups="stock.group_stock_user,!appointment_products.group_lab_inspector"
                        invisible="lab_notified"/>

                <button name="action_do_nothing" type="object" class="btn-secondary"
                        string="تم الإشعار"
                        groups="stock.group_stock_user,!appointment_products.group_lab_inspector"
                        invisible="not lab_notified" disabled="1"/>
            </xpath>

            <xpath expr="//sheet" position="before">
                <div class="alert alert-info" role="alert" invisible="not lab_notified">
                    تم إشعار المختبر — بانتظار إجراءات الفحص.
                </div>
            </xpath>
        </field>
    </record>
</odoo> 