<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">
  <t t-name="appointment_products.LabChartField" owl="1">
    <div class="o_lab_chart_field" t-att-style="'height:'+height+'px;'">
      <LabChart recordId="recordId" type="chartType"/>
    </div>
  </t>
  <t t-name="appointment_products.LabChart" owl="1">
    <div class="o_lab_chart_wrapper" style="height:100%; min-height:320px; position:relative;">
      <canvas t-ref="canvas" style="width:100%; height:100%;"></canvas>
      <t t-if="state.loading">
        <div class="text-muted o_lab_chart_overlay">Loading chartâ€¦</div>
      </t>
      <t t-if="state.error">
        <div class="text-danger o_lab_chart_overlay" t-esc="state.error"/>
      </t>
    </div>
  </t>
</templates>
