<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_concrete_truck_form" model="ir.ui.view">
        <field name="name">lab.concrete.truck.form</field>
        <field name="model">lab.concrete.truck</field>
        <field name="arch" type="xml">
            <form string="شاحنة خرسانة">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="capacity_m3"/>
                        <field name="note"/>
                    </group>
                    <notebook>
                        <page string="المكعبات">
                            <field name="cube_ids" readonly="1"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_concrete_truck_tree" model="ir.ui.view">
        <field name="name">lab.concrete.truck.tree</field>
        <field name="model">lab.concrete.truck</field>
        <field name="arch" type="xml">
            <list string="شاحنات الخرسانة">
                <field name="name"/>
                <field name="capacity_m3"/>
                <field name="note"/>
            </list>
        </field>
    </record>

    <record id="action_concrete_trucks" model="ir.actions.act_window">
        <field name="name">شاحنات الخرسانة</field>
        <field name="res_model">lab.concrete.truck</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p>سجل شاحنات الخرسانة لتتبع توزيع المكعبات على الشاحنات.</p>
        </field>
    </record>
     <!--
    <menuitem id="menu_lab_concrete_config_root" name="شاحنات الخرسانة" parent="appointment_products.menu_lab_root" sequence="99" action="action_concrete_trucks"/>
    -->
</odoo> 