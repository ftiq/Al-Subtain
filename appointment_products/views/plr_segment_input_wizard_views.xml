<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_plr_segment_input_wizard_form" model="ir.ui.view">
        <field name="name">plr.segment.input.wizard.form</field>
        <field name="model">plr.segment.input.wizard</field>
        <field name="arch" type="xml">
            <form string="إدخال بيانات المقطع">
                <group>
                    <field name="station_range" string="المقطع" readonly="1"/>
                </group>
                <field name="line_ids" nolabel="1">
                    <list string="محطات 50 م" editable="bottom" create="0" delete="0" reorder="0">
                        <field name="irr_459_count" string="4.0–5.9 مم"/>
                        <field name="irr_610_count" string="6.0–10.0 مم"/>
                        <field name="irr_gt10_count" string="> 10 مم"/>
                        <field name="station_label" string="المحطة"/>
                    </list>
                    <form string="محطة 50 م">
                        <group>
                            <group>
                                <field name="station_label"/>
                            </group>
                            <group>
                                <field name="irr_459_count"/>
                                <field name="irr_610_count"/>
                                <field name="irr_gt10_count"/>
                            </group>
                        </group>
                    </form>
                </field>
                <footer>
                    <button string="اعتماد" type="object" name="action_apply" class="btn btn-primary"/>
                    <button string="إلغاء" class="btn btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>
