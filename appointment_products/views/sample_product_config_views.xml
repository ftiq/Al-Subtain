<?xml version="1.0" encoding="utf-8"?>
<odoo>
    
    <record id="sample_product_config_tree_view" model="ir.ui.view">
        <field name="name">sample.product.config.tree</field>
        <field name="model">sample.product.config</field>
        <field name="arch" type="xml">
            <list string="إعدادات منتجات العينات" editable="bottom">
                <field name="sample_product_id" string="منتج العينات"/>
                <field name="samples_per_unit" string="العينة الواحدة تساوي"/>
            </list>
        </field>
    </record>

    <record id="sample_product_config_form_view" model="ir.ui.view">
        <field name="name">sample.product.config.form</field>
        <field name="model">sample.product.config</field>
        <field name="arch" type="xml">
            <form string="إعداد منتج العينات">
                <sheet>
                    <group>
                        <field name="sample_product_id" string="منتج العينات"/>
                        <field name="samples_per_unit" string="العينة الواحدة تساوي"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

</odoo> 