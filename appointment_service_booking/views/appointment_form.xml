
<odoo>
  <template id="custom_appointment_form" name="Appointment Form with Service" inherit_id="appointment.appointment_form">
    <xpath expr="//form//div[last()]" position="before">
      <div class="form-group">
        <label for="service_product_id">Select Service</label>
        <select name="service_product_id" class="form-control" required="1">
          <option value="">-- Choose Service --</option>
          <t t-foreach="services" t-as="product">
            <option t-att-value="product.id">
              <t t-esc="product.display_name"/>
            </option>
          </t>
        </select>
      </div>
      <div class="form-group mt-2">
        <label>Upload File</label>
        <input type="file" name="attachment_file" class="form-control"/>
      </div>
    </xpath>
  </template>
</odoo>
