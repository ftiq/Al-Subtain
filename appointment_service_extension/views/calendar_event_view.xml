<odoo>
    <record id="calendar_event_view_form_inherit_service" model="ir.ui.view">
        <field name="name">calendar.event.form.inherit.service</field>
        <field name="model">calendar.event</field>
        <field name="inherit_id" ref="calendar.view_calendar_event_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='duration']" position="after">
                <field name="service_product_id"/>
            </xpath>
        </field>
    </record>
</odoo>
