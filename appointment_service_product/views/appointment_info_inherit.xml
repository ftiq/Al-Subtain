<odoo>
    <template id="appointment_form_inherit_service_product" inherit_id="appointment.appointment_form">
        <xpath expr="//form" position="inside">
            <div class="form-group">
                <label for="x_service_product_id">نوع الخدمة</label>
                <select name="x_service_product_id" class="form-control" required="required">
                    <t t-foreach="products" t-as="product">
                        <option t-att-value="product.id">
                            <t t-esc="product.name"/>
                        </option>
                    </t>
                </select>
            </div>
        </xpath>
    </template>
</odoo>
