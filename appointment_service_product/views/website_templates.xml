<odoo>
    <template id="appointment_form" inherit_id="website_calendar.appointment">
        <xpath expr="//form[@id='appointment_form']" position="inside">
            <div class="form-group">
                <label for="service_id">Select Service</label>
                <select name="service_id" class="form-control">
                    <option value="">-- Select Service --</option>
                    <t t-foreach="request.env['product.product'].search([('type','=','service')])" t-as="service">
                        <option t-att-value="service.id">
                            <t t-esc="service.name"/>
                        </option>
                    </t>
                </select>
            </div>
        </xpath>
    </template>
</odoo>
