<odoo>
    <template id="product_selection_snippet" inherit_id="website_calendar.appointment">
        <xpath expr="//div[hasclass('o_appointment_form')]" position="inside">
            <div class="form-group" t-if="products">
                <label for="product_id">Service Selection</label>
                <select name="product_id" class="form-control" required>
                    <option value="">-- Select Service --</option>
                    <t t-foreach="products" t-as="product">
                        <option t-att-value="product.id">
                            <t t-esc="product.name"/> - <t t-esc="product.list_price"/>
                        </option>
                    </t>
                </select>
            </div>
        </xpath>
    </template>
</odoo>
