<odoo>
    <template id="appointment_form_custom" inherit_id="website_calendar.index">
        <xpath expr="//form[contains(@class,'o_appointment_form')]" position="inside">
            <div class="form-group">
                <label for="product_id">اختر الخدمة</label>
                <select name="product_id" class="form-control" required="required">
                    <option value="">-- اختر خدمة --</option>
                    <t t-foreach="services" t-as="service">
                        <option t-att-value="service.id">
                            <t t-esc="service.name"/> - <t t-esc="service.list_price"/> ر.س
                        </option>
                    </t>
                </select>
            </div>
        </xpath>
    </template>
</odoo>
