<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <template id="appointment_form_custom" inherit_id="appointment.appointment_form" name="Appointment Form Customization">
        <xpath expr="//form" position="attributes">
            <attribute name="enctype">multipart/form-data</attribute>
        </xpath>
        <xpath expr="//form//div[@class='s_website_form']" position="inside">
            <div class="form-group">
                <label for="service_id">اختر الخدمة المطلوبة</label>
                <select name="service_id" id="service_id" required="1" class="form-control">
                    <option t-foreach="request.env['product.product'].sudo().search([('type','=','service')])" t-as="prod" t-att-value="prod.id">
                        <t t-esc="prod.display_name"/>
                    </option>
                </select>
            </div>
            <div class="form-group">
                <label for="attachment">مرفقات (ملف)</label>
                <input type="file" name="attachment" id="attachment" class="form-control" accept="image/*,application/pdf"/>
            </div>
        </xpath>
    </template>
</odoo>
