<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="ir_actions_server_generate_overtime_requests" model="ir.actions.server">
        <field name="name">Overtime: Generate Requests from Attendance</field>
        <field name="model_id" ref="hr_overtime_request.model_overtime_request"/>
        <field name="state">code</field>
        <field name="code">model.cron_generate_requests_from_attendance()</field>
    </record>


    <record id="ir_cron_generate_overtime_requests" model="ir.cron">
        <field name="ir_actions_server_id" ref="hr_overtime_request.ir_actions_server_generate_overtime_requests"/>
        <field name="active" eval="True"/>
        <field name="interval_number" eval="1"/>
        <field name="interval_type">days</field>
        <field name="user_id" ref="base.user_root"/>
        <field name="priority" eval="5"/>
    </record>
</odoo>
