<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record id="overtime_request_rule_employee_own" model="ir.rule">
        <field name="name">Overtime Request: Employee Own</field>
        <field name="model_id" ref="model_overtime_request"/>
        <field name="groups" eval="[(4, ref('base.group_user'))]"/>
        <field name="domain_force">[("employee_id.user_id", "=", user.id)]</field>
        <field name="perm_read" eval="True"/>
        <field name="perm_write" eval="True"/>
        <field name="perm_create" eval="True"/>
        <field name="perm_unlink" eval="False"/>
    </record>

    <record id="overtime_request_rule_manager_team" model="ir.rule">
        <field name="name">Overtime Request: Manager Team</field>
        <field name="model_id" ref="model_overtime_request"/>
        <field name="groups" eval="[(4, ref('hr_holidays.group_hr_holidays_responsible'))]"/>
        <field name="domain_force">[("employee_id.department_id.manager_id.user_id", "=", user.id)]</field>
        <field name="perm_read" eval="True"/>
        <field name="perm_write" eval="True"/>
        <field name="perm_create" eval="True"/>
        <field name="perm_unlink" eval="False"/>
    </record>


    <record id="overtime_request_rule_assigned_approver" model="ir.rule">
        <field name="name">Overtime Request: Assigned approver</field>
        <field name="model_id" ref="model_overtime_request"/>
        <field name="groups" eval="[(4, ref('base.group_user'))]"/>
        <field name="domain_force">[("approval_line_ids.approver_user_id", "=", user.id)]</field>
        <field name="perm_read" eval="True"/>
        <field name="perm_write" eval="True"/>
        <field name="perm_create" eval="False"/>
        <field name="perm_unlink" eval="False"/>
    </record>


    <record id="overtime_request_rule_hr_all" model="ir.rule">
        <field name="name">Overtime Request: HR All</field>
        <field name="model_id" ref="model_overtime_request"/>
        <field name="groups" eval="[(4, ref('hr.group_hr_user'))]"/>
        <field name="domain_force">[(1, '=', 1)]</field>
        <field name="perm_read" eval="True"/>
        <field name="perm_write" eval="True"/>
        <field name="perm_create" eval="True"/>
        <field name="perm_unlink" eval="True"/>
    </record>
</odoo>
