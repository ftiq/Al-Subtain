<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record id="overtime_request_action_my" model="ir.actions.act_window">
        <field name="name">My Overtime Requests</field>
        <field name="res_model">overtime.request</field>
        <field name="view_mode">list,form</field>
        <field name="domain">[("employee_id.user_id", "=", uid)]</field>
        <field name="context">{}</field>
    </record>


    <record id="overtime_request_action_to_approve" model="ir.actions.act_window">
        <field name="name">Overtime: To Approve</field>
        <field name="res_model">overtime.request</field>
        <field name="view_mode">list,form</field>
        <field name="domain">[("state", "=", "to_approve"), ("approval_line_ids.approver_user_id", "=", uid)]</field>
        <field name="context">{}</field>
    </record>


    <record id="overtime_request_action_all" model="ir.actions.act_window">
        <field name="name">All Overtime Requests</field>
        <field name="res_model">overtime.request</field>
        <field name="view_mode">list,form</field>
        <field name="context">{}</field>
    </record>


    <menuitem id="menu_hr_overtime_my" name="My Overtime Requests"
              parent="hr_holidays.menu_hr_holidays_my_leaves" action="overtime_request_action_my" sequence="50"/>

    <menuitem id="menu_hr_overtime_management" name="Overtime Requests"
              parent="hr_holidays.menu_hr_holidays_management" action="overtime_request_action_to_approve"
              groups="hr_holidays.group_hr_holidays_responsible" sequence="50"/>

    <menuitem id="menu_hr_overtime_all" name="All Overtime Requests"
              parent="hr_holidays.menu_hr_holidays_management" action="overtime_request_action_all"
              groups="hr.group_hr_user" sequence="51"/>


    <record id="overtime_request_tree" model="ir.ui.view">
        <field name="name">overtime.request.tree</field>
        <field name="model">overtime.request</field>
        <field name="arch" type="xml">
            <list string="Overtime Requests" create="1" edit="1" delete="0">
                <field name="state"/>
                <field name="employee_id"/>
                <field name="date"/>
                <field name="hours"/>
                <field name="conversion_type"/>
                <field name="approved_by"/>
                <field name="approved_date"/>
            </list>
        </field>
    </record>


    <record id="overtime_request_form" model="ir.ui.view">
        <field name="name">overtime.request.form</field>
        <field name="model">overtime.request</field>
        <field name="arch" type="xml">
            <form string="Overtime Request" create="1" edit="1" delete="0">
                <header>
                    <button name="action_submit" type="object" string="Submit" class="btn-primary"
                            invisible="not is_employee or state != 'draft'"/>
                    <button name="action_approve" type="object" string="Approve" class="btn-primary"
                            invisible="not is_current_approver or state != 'to_approve'"/>
                    <button name="action_reject" type="object" string="Reject" class="btn-secondary"
                            invisible="not is_current_approver or state != 'to_approve'"/>
                    <button name="action_convert" type="object" string="Convert" class="btn-success"
                            invisible="state != 'approved' or not conversion_type"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,to_approve,approved,rejected,converted"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box"/>
                    <group>
                        <group>
                            <field name="employee_id"/>
                            <field name="date"/>
                            <field name="hours"/>
                        </group>
                        <group>
                            <field name="conversion_type" invisible="state != 'approved'"/>
                            <field name="approved_by" readonly="1"/>
                            <field name="approved_date" readonly="1"/>
                            <field name="rejected_by" readonly="1"/>
                            <field name="rejected_date" readonly="1"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Attendance Overtime" name="attendance_overtime">
                            <field name="attendance_overtime_ids" readonly="1" nolabel="1">
                                <list string="Attendance Overtime" create="0" edit="0" delete="0">
                                    <field name="date"/>
                                    <field name="duration"/>
                                    <field name="duration_real"/>
                                    <field name="adjustment"/>
                                </list>
                            </field>
                        </page>
                        <page string="Approvals">
                            <field name="approval_line_ids">
                                <list editable="bottom">
                                    <field name="step" readonly="1"/>
                                    <field name="approver_user_id" readonly="1"/>
                                    <field name="state" readonly="1"/>
                                    <field name="date" readonly="1"/>
                                    <field name="note" readonly="1"/>
                                </list>
                            </field>
                        </page>
                        <page string="Notes">
                            <group>
                                <field name="reject_reason" placeholder="Reason if rejected..." readonly="state != 'to_approve'"/>
                            </group>
                        </page>
                        <page string="Chatter">
                            <chatter>
                                <field name="message_follower_ids"/>
                                <field name="activity_ids"/>
                            </chatter>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

</odoo>
