<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        
        <!-- رسائل النسخ المعدة مسبقاً -->
        
        <record id="copy_message_default" model="document.copy.message">
            <field name="name">رسالة عامة للعلم والمتابعة</field>
            <field name="message">يرجى الاطلاع على الوثيقة المرفقة للعلم والمتابعة اللازمة.</field>
            <field name="sequence">10</field>
            <field name="active">True</field>
        </record>

        <record id="copy_message_urgent" model="document.copy.message">
            <field name="name">رسالة عاجلة للمراجعة</field>
            <field name="message">نرجو منكم مراجعة الوثيقة المرفقة والرد في أقرب وقت ممكن نظراً لطبيعتها العاجلة.</field>
            <field name="sequence">20</field>
            <field name="active">True</field>
        </record>

        <record id="copy_message_action_required" model="document.copy.message">
            <field name="name">رسالة تتطلب إجراء</field>
            <field name="message">يرجى مراجعة الوثيقة المرفقة واتخاذ الإجراءات اللازمة بناءً على محتواها.</field>
            <field name="sequence">30</field>
            <field name="active">True</field>
        </record>

        <record id="copy_message_information" model="document.copy.message">
            <field name="name">رسالة إعلامية فقط</field>
            <field name="message">للعلم والاطلاع فقط، لا يتطلب أي إجراء من جانبكم.</field>
            <field name="sequence">40</field>
            <field name="active">True</field>
        </record>

        <record id="copy_message_approval" model="document.copy.message">
            <field name="name">رسالة للمراجعة والموافقة</field>
            <field name="message">نرجو مراجعة الوثيقة المرفقة وإبداء الرأي أو الموافقة حسب الحاجة.</field>
            <field name="sequence">50</field>
            <field name="active">True</field>
        </record>

        <record id="copy_message_coordination" model="document.copy.message">
            <field name="name">رسالة للتنسيق</field>
            <field name="message">يرجى الاطلاع على الوثيقة المرفقة والتنسيق معنا بخصوص الموضوع المطروح.</field>
            <field name="sequence">60</field>
            <field name="active">True</field>
        </record>

        <record id="copy_message_consultation" model="document.copy.message">
            <field name="name">رسالة للاستشارة</field>
            <field name="message">نتطلع إلى مشورتكم وآرائكم حول الموضوع المطروح في الوثيقة المرفقة.</field>
            <field name="sequence">70</field>
            <field name="active">True</field>
        </record>

        <record id="copy_message_follow_up" model="document.copy.message">
            <field name="name">رسالة للمتابعة</field>
            <field name="message">يرجى متابعة تنفيذ ما ورد في الوثيقة المرفقة وإفادتنا بالتطورات.</field>
            <field name="sequence">80</field>
            <field name="active">True</field>
        </record>

        <record id="copy_message_meeting" model="document.copy.message">
            <field name="name">رسالة لدعوة اجتماع</field>
            <field name="message">بناءً على محتوى الوثيقة المرفقة، يرجى الاستعداد لمناقشة الموضوع في الاجتماع القادم.</field>
            <field name="sequence">90</field>
            <field name="active">True</field>
        </record>

        <record id="copy_message_deadline" model="document.copy.message">
            <field name="name">رسالة مع موعد نهائي</field>
            <field name="message">يرجى مراجعة الوثيقة المرفقة والرد في موعد أقصاه تاريخ الاستحقاق المحدد.</field>
            <field name="sequence">100</field>
            <field name="active">True</field>
        </record>

    </data>
</odoo>
