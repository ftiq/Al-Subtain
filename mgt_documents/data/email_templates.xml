<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="email_template_approval_notification" model="mail.template">
            <field name="name">Approval Notification</field>
            <field name="model_id" ref="model_document_document"/>
            <field name="subject">Approval Notification: {{ object.name }}</field>
            <field name="email_from">{{ object.env.user.email or '' }}</field>
            <field name="email_to">{{ ctx.get('recipient_user') and ctx['recipient_user'].email or '' }}</field>
            <field name="lang">ar_001</field>
            <field name="auto_delete" eval="True"/>
            <field name="body_html"><![CDATA[
<div style="direction: rtl; font-family: Arial, sans-serif; max-width: 500px; margin: 0 auto;">
    <div style="background-color: #4CAF50; color: white; padding: 20px; text-align: center; font-size: 18px; font-weight: bold; border-radius: 8px 8px 0 0;">
        âœ… Document Approved
    </div>
</div>
]]></field>
        </record>
    </data>
</odoo>
