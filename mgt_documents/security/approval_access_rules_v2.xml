<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <data noupdate="1">

    <!-- Approval Request: owner or approver can read/write their requests -->
    <record id="rule_v2_approval_owner_or_approver" model="ir.rule">
      <field name="name">V2: طلب موافقة - المالك أو الموافق</field>
      <field name="model_id" ref="mgt_documents.model_approval_request"/>
      <field name="domain_force">[
        '|', ('request_owner_id','=',user.id), ('approver_ids.user_id','=',user.id)
      ]</field>
      <field name="groups" eval="[(4, ref('mgt_documents.group_doc_viewer')), (4, ref('mgt_documents.group_doc_contributor')), (4, ref('mgt_documents.group_doc_approver'))]"/>
    </record>

    <!-- Approval Request: manager read/write within department tree -->
    <record id="rule_v2_approval_manager_dept" model="ir.rule">
      <field name="name">V2: طلب موافقة - إدارة قسم والفروع</field>
      <field name="model_id" ref="mgt_documents.model_approval_request"/>
      <field name="domain_force">[
        '|',
          ('department_id','child_of', user.employee_id.department_id.id if user.employee_id and user.employee_id.department_id else False),
          ('document_id.department_id','child_of', user.employee_id.department_id.id if user.employee_id and user.employee_id.department_id else False)
      ]</field>
      <field name="groups" eval="[(4, ref('mgt_documents.group_doc_manager'))]"/>
    </record>

    <!-- Approval Request: admin full -->
    <record id="rule_v2_approval_admin_all" model="ir.rule">
      <field name="name">V2: طلب موافقة - وصول كامل</field>
      <field name="model_id" ref="mgt_documents.model_approval_request"/>
      <field name="domain_force">[(1,'=',1)]</field>
      <field name="groups" eval="[(4, ref('mgt_documents.group_doc_admin'))]"/>
    </record>

    <!-- Approver lines: request owner can read -->
    <record id="rule_v2_approver_owner_read" model="ir.rule">
      <field name="name">V2: سطر موافق - مالك الطلب قراءة</field>
      <field name="model_id" ref="mgt_documents.model_approval_approver"/>
      <field name="domain_force">[
        ('request_id.request_owner_id','=',user.id)
      ]</field>
      <field name="groups" eval="[(4, ref('mgt_documents.group_doc_viewer')), (4, ref('mgt_documents.group_doc_contributor'))]"/>
      <field name="perm_read" eval="True"/>
      <field name="perm_write" eval="False"/>
      <field name="perm_create" eval="False"/>
      <field name="perm_unlink" eval="False"/>
    </record>

    <!-- Approver lines: approver himself can read/write -->
    <record id="rule_v2_approver_self_write" model="ir.rule">
      <field name="name">V2: سطر موافق - المعتمد نفسه قراءة/كتابة</field>
      <field name="model_id" ref="mgt_documents.model_approval_approver"/>
      <field name="domain_force">[
        ('user_id','=',user.id)
      ]</field>
      <field name="groups" eval="[(4, ref('mgt_documents.group_doc_approver'))]"/>
      <field name="perm_read" eval="True"/>
      <field name="perm_write" eval="True"/>
      <field name="perm_create" eval="False"/>
      <field name="perm_unlink" eval="False"/>
    </record>

    <!-- Approver lines: manager within dept tree -->
    <record id="rule_v2_approver_manager_dept" model="ir.rule">
      <field name="name">V2: سطر موافق - مدير القسم والفروع</field>
      <field name="model_id" ref="mgt_documents.model_approval_approver"/>
      <field name="domain_force">[
        '|',
          ('request_id.department_id','child_of', user.employee_id.department_id.id if user.employee_id and user.employee_id.department_id else False),
          ('request_id.document_id.department_id','child_of', user.employee_id.department_id.id if user.employee_id and user.employee_id.department_id else False)
      ]</field>
      <field name="groups" eval="[(4, ref('mgt_documents.group_doc_manager'))]"/>
    </record>

    <!-- Approver lines: admin full -->
    <record id="rule_v2_approver_admin_all" model="ir.rule">
      <field name="name">V2: سطر موافق - وصول كامل</field>
      <field name="model_id" ref="mgt_documents.model_approval_approver"/>
      <field name="domain_force">[(1,'=',1)]</field>
      <field name="groups" eval="[(4, ref('mgt_documents.group_doc_admin'))]"/>
    </record>

  </data>
</odoo>
