<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">


        <record id="rule_document_copy_read_only" model="ir.rule">
            <field name="name">المستخدمون المحددون للنسخ - قراءة فقط</field>
            <field name="model_id" ref="model_document_document"/>
            <field name="domain_force">[
                '|',
                    ('copy_to_user_ids', 'in', [user.id]),
                    ('message_follower_ids.partner_id', '=', user.partner_id.id)
            ]</field>
            <field name="groups" eval="[(4, ref('base.group_user'))]"/>
            <field name="perm_read" eval="1"/>
            <field name="perm_write" eval="0"/>
            <field name="perm_create" eval="0"/>
            <field name="perm_unlink" eval="0"/>
        </record>


        <record id="group_document_copy_reader" model="res.groups">
            <field name="name">قارئ النسخ - الوثائق</field>
            <field name="category_id" ref="base.module_category_document_management"/>
            <field name="comment">المستخدمون في هذه المجموعة يمكنهم قراءة الوثائق المرسلة إليهم كنسخ فقط</field>
        </record>


        <record id="access_document_copy_reader" model="ir.model.access">
            <field name="name">document.document.copy.reader</field>
            <field name="model_id" ref="model_document_document"/>
            <field name="group_id" ref="group_document_copy_reader"/>
            <field name="perm_read" eval="1"/>
            <field name="perm_write" eval="0"/>
            <field name="perm_create" eval="0"/>
            <field name="perm_unlink" eval="0"/>
        </record>

        <record id="access_document_category_copy_reader" model="ir.model.access">
            <field name="name">document.category.copy.reader</field>
            <field name="model_id" ref="model_document_category"/>
            <field name="group_id" ref="group_document_copy_reader"/>
            <field name="perm_read" eval="1"/>
            <field name="perm_write" eval="0"/>
            <field name="perm_create" eval="0"/>
            <field name="perm_unlink" eval="0"/>
        </record>

        <record id="access_document_keyword_copy_reader" model="ir.model.access">
            <field name="name">document.keyword.copy.reader</field>
            <field name="model_id" ref="model_document_keyword"/>
            <field name="group_id" ref="group_document_copy_reader"/>
            <field name="perm_read" eval="1"/>
            <field name="perm_write" eval="0"/>
            <field name="perm_create" eval="0"/>
            <field name="perm_unlink" eval="0"/>
        </record>

        <record id="access_document_history_copy_reader" model="ir.model.access">
            <field name="name">document.history.copy.reader</field>
            <field name="model_id" ref="model_document_history"/>
            <field name="group_id" ref="group_document_copy_reader"/>
            <field name="perm_read" eval="1"/>
            <field name="perm_write" eval="0"/>
            <field name="perm_create" eval="0"/>
            <field name="perm_unlink" eval="0"/>
        </record>


        <record id="rule_document_copy_no_modification" model="ir.rule">
            <field name="name">منع تعديل الوثائق المنسوخة</field>
            <field name="model_id" ref="model_document_document"/>
            <field name="domain_force">[
                ('copy_to_user_ids', 'not in', [user.id])
            ]</field>
            <field name="groups" eval="[(4, ref('group_document_copy_reader'))]"/>
            <field name="perm_read" eval="0"/>
            <field name="perm_write" eval="1"/>
            <field name="perm_create" eval="1"/>
            <field name="perm_unlink" eval="1"/>
        </record>

    </data>
</odoo>
