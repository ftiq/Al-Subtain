<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="module_category_document_management" model="ir.module.category">
            <field name="name">Document Management</field>
            <field name="description">Document Management System</field>
            <field name="sequence">10</field>
        </record>


        

        <record id="group_document_user" model="res.groups">
            <field name="name">Document Entry User</field>
            <field name="category_id" ref="module_category_document_management"/>
            <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
            <field name="comment">Document Entry and Basic Document Display</field>
        </record>


        <record id="group_document_processor" model="res.groups">
            <field name="name">Document Processor</field>
            <field name="category_id" ref="module_category_document_management"/>
            <field name="implied_ids" eval="[(4, ref('group_document_user'))]"/>
            <field name="comment">Document Processing and Editing</field>
        </record>

        <record id="group_document_supervisor" model="res.groups">
            <field name="name">Document Supervisor</field>
            <field name="category_id" ref="module_category_document_management"/>
            <field name="implied_ids" eval="[(4, ref('group_document_processor'))]"/>
            <field name="comment">Document Supervision and Approval</field>
        </record>
        
        <record id="group_document_approver" model="res.groups">
            <field name="name">Document Approver</field>
            <field name="category_id" ref="module_category_document_management"/>
            <field name="implied_ids" eval="[(4, ref('group_document_supervisor'))]"/>
            <field name="comment">Document Approval and Request Management</field>
        </record>

        <record id="group_document_manager" model="res.groups">
            <field name="name">Document Manager</field>
            <field name="category_id" ref="module_category_document_management"/>
            <field name="implied_ids" eval="[(4, ref('group_document_supervisor'))]"/>
            <field name="comment">Document Management and Process Configuration</field>
        </record>

        <record id="group_document_director" model="res.groups">
            <field name="name">Document Director</field>
            <field name="category_id" ref="module_category_document_management"/>
            <field name="implied_ids" eval="[(4, ref('group_document_manager'))]"/>
            <field name="comment">High-level Approvals and Important Decisions</field>
        </record>

        <record id="group_document_admin" model="res.groups">
            <field name="name">System Administrator</field>
            <field name="category_id" ref="module_category_document_management"/>
            <field name="implied_ids" eval="[(4, ref('group_document_director')), (4, ref('base.group_system'))]"/>
            <field name="comment">Full Technical and Administrative Permissions</field>
        </record>


        <record id="group_document_legal_reviewer" model="res.groups">
            <field name="name">Legal Reviewer</field>
            <field name="category_id" ref="module_category_document_management"/>
            <field name="implied_ids" eval="[(4, ref('group_document_processor'))]"/>
            <field name="comment">Legal Document Review</field>
        </record>

        <record id="group_document_financial_reviewer" model="res.groups">
            <field name="name">Financial Reviewer</field>
            <field name="category_id" ref="module_category_document_management"/>
            <field name="implied_ids" eval="[(4, ref('group_document_processor'))]"/>
            <field name="comment">Financial Document Review</field>
        </record>

        <record id="group_document_auditor" model="res.groups">
            <field name="name">Auditor</field>
            <field name="category_id" ref="module_category_document_management"/>
            <field name="implied_ids" eval="[(4, ref('group_document_supervisor'))]"/>
            <field name="comment">Process Audit and Review</field>
        </record>

        <record id="group_document_archivist" model="res.groups">
            <field name="name">Archivist</field>
            <field name="category_id" ref="module_category_document_management"/>
            <field name="implied_ids" eval="[(4, ref('group_document_processor'))]"/>
            <field name="comment">Document Archiving and Preservation</field>
        </record>



    </data>
</odoo> 