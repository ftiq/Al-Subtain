<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="module_category_document_management" model="ir.module.category">
            <field name="name">إدارة الوثائق</field>
            <field name="description">نظام إدارة الوثائق والعمليات</field>
            <field name="sequence">10</field>
        </record>


        

        <record id="group_document_user" model="res.groups">
            <field name="name">موظف إدخال</field>
            <field name="category_id" ref="module_category_document_management"/>
            <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
            <field name="comment">إدخال وعرض الوثائق الأساسية</field>
        </record>


        <record id="group_document_processor" model="res.groups">
            <field name="name">موظف معالجة</field>
            <field name="category_id" ref="module_category_document_management"/>
            <field name="implied_ids" eval="[(4, ref('group_document_user'))]"/>
            <field name="comment">معالجة وتعديل الوثائق</field>
        </record>

        <record id="group_document_supervisor" model="res.groups">
            <field name="name">مشرف</field>
            <field name="category_id" ref="module_category_document_management"/>
            <field name="implied_ids" eval="[(4, ref('group_document_processor'))]"/>
            <field name="comment">إشراف وموافقة على العمليات</field>
        </record>
        
        <record id="group_document_approver" model="res.groups">
            <field name="name">موافق</field>
            <field name="category_id" ref="module_category_document_management"/>
            <field name="implied_ids" eval="[(4, ref('group_document_supervisor'))]"/>
            <field name="comment">موافقة على الوثائق والطلبات</field>
        </record>

        <record id="group_document_manager" model="res.groups">
            <field name="name">مدير</field>
            <field name="category_id" ref="module_category_document_management"/>
            <field name="implied_ids" eval="[(4, ref('group_document_supervisor'))]"/>
            <field name="comment">إدارة وتكوين العمليات</field>
        </record>

        <record id="group_document_director" model="res.groups">
            <field name="name">مدير عام</field>
            <field name="category_id" ref="module_category_document_management"/>
            <field name="implied_ids" eval="[(4, ref('group_document_manager'))]"/>
            <field name="comment">صلاحيات عليا وموافقات مهمة</field>
        </record>

        <record id="group_document_admin" model="res.groups">
            <field name="name">مدير نظام</field>
            <field name="category_id" ref="module_category_document_management"/>
            <field name="implied_ids" eval="[(4, ref('group_document_director')), (4, ref('base.group_system'))]"/>
            <field name="comment">صلاحيات تقنية وإدارية كاملة</field>
        </record>


        <record id="group_document_legal_reviewer" model="res.groups">
            <field name="name">مراجع قانوني</field>
            <field name="category_id" ref="module_category_document_management"/>
            <field name="implied_ids" eval="[(4, ref('group_document_processor'))]"/>
            <field name="comment">مراجعة الوثائق القانونية</field>
        </record>

        <record id="group_document_financial_reviewer" model="res.groups">
            <field name="name">مراجع مالي</field>
            <field name="category_id" ref="module_category_document_management"/>
            <field name="implied_ids" eval="[(4, ref('group_document_processor'))]"/>
            <field name="comment">مراجعة الوثائق المالية</field>
        </record>

        <record id="group_document_auditor" model="res.groups">
            <field name="name">مدقق</field>
            <field name="category_id" ref="module_category_document_management"/>
            <field name="implied_ids" eval="[(4, ref('group_document_supervisor'))]"/>
            <field name="comment">تدقيق ومراجعة العمليات</field>
        </record>

        <record id="group_document_archivist" model="res.groups">
            <field name="name">أمين أرشيف</field>
            <field name="category_id" ref="module_category_document_management"/>
            <field name="implied_ids" eval="[(4, ref('group_document_processor'))]"/>
            <field name="comment">إدارة الأرشيف والحفظ</field>
        </record>



    </data>
</odoo> 