<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>


        <record id="view_copy_message_tree" model="ir.ui.view">
            <field name="name">document.copy.message.tree</field>
            <field name="model">document.copy.message</field>
            <field name="arch" type="xml">
                <list string="رسائل النسخ" editable="bottom">
                    <field name="sequence" widget="handle"/>
                    <field name="name"/>
                    <field name="message"/>
                    <field name="usage_count"/>
                    <field name="active"/>
                </list>
            </field>
        </record>

        <record id="view_copy_message_form" model="ir.ui.view">
            <field name="name">document.copy.message.form</field>
            <field name="model">document.copy.message</field>
            <field name="arch" type="xml">
                <form string="رسالة النسخة">
                    <sheet>
                        <group>
                            <group>
                                <field name="name" placeholder="اسم مميز للرسالة"/>
                                <field name="sequence"/>
                                <field name="active"/>
                            </group>
                            <group>
                                <field name="usage_count" readonly="1"/>
                            </group>
                        </group>
                        <group string="نص الرسالة">
                            <field name="message" widget="text" placeholder="اكتب محتوى الرسالة هنا..."/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="view_copy_message_search" model="ir.ui.view">
            <field name="name">document.copy.message.search</field>
            <field name="model">document.copy.message</field>
            <field name="arch" type="xml">
                <search string="بحث في رسائل النسخ">
                    <field name="name" string="الاسم" filter_domain="[('name', 'ilike', self)]"/>
                    <field name="message" string="المحتوى" filter_domain="[('message', 'ilike', self)]"/>
                    <separator/>
                    <filter string="نشطة" name="active_messages" domain="[('active', '=', True)]"/>
                    <filter string="غير نشطة" name="inactive_messages" domain="[('active', '=', False)]"/>
                    <separator/>
                    <filter string="الأكثر استخداماً" name="most_used" domain="[('usage_count', '>', 0)]"/>
                    <filter string="غير مستخدمة" name="not_used" domain="[('usage_count', '=', 0)]"/>
                    <group expand="0" string="تجميع حسب">
                        <filter string="الحالة" name="group_by_active" context="{'group_by': 'active'}"/>
                    </group>
                </search>
            </field>
        </record>

        <record id="action_copy_message" model="ir.actions.act_window">
            <field name="name">الهوامش </field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">document.copy.message</field>
            <field name="view_mode">list,form</field>
            <field name="search_view_id" ref="view_copy_message_search"/>
            <field name="context">{}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    قم بإنشاء هامش جديد
                </p>
                <p>
                    هامش النسخ هو هامش معدة مسبقاً يتم إرسالها مع إشعارات النسخ للمستخدمين المحددين.
                    يمكنك إنشاء هامش مختلفة حسب نوع الوثيقة أو الغرض من الإرسال.
                </p>
            </field>
        </record>

        <menuitem id="menu_copy_messages"
                  name="الهوامش"
                  parent="menu_configuration"
                  action="action_copy_message"
                  sequence="60"/>

    </data>
</odoo>
