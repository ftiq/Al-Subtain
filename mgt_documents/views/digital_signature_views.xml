<?xml version="1.0" encoding="utf-8"?>
<odoo>
    
    <record id="view_digital_signature_tree" model="ir.ui.view">
        <field name="name">digital.signature.tree</field>
        <field name="model">digital.signature</field>
        <field name="arch" type="xml">
            <list string="التوقيعات الرقمية">
                <field name="name"/>
                <field name="document_id"/>
                <field name="signer_id"/>
                <field name="signature_date"/>
                <field name="signature_method"/>
                <field name="state" widget="badge" 
                       decoration-success="state == 'verified'"
                       decoration-info="state == 'signed'"
                       decoration-warning="state == 'draft'"
                       decoration-danger="state == 'invalid'"/>
                <field name="is_valid" widget="boolean_toggle"/>
            </list>
        </field>
    </record>

    <record id="view_digital_signature_form" model="ir.ui.view">
        <field name="name">digital.signature.form</field>
        <field name="model">digital.signature</field>
        <field name="arch" type="xml">
            <form string="التوقيع الرقمي">
                <header>
                    <button name="action_sign" string="توقيع" type="object" 
                            class="oe_highlight" 
                            invisible="state != 'draft'"/>
                    <button name="action_verify" string="تحقق" type="object" 
                            class="oe_highlight" 
                            invisible="state != 'signed'"/>
                    <button name="action_invalidate" string="إبطال" type="object" 
                            class="btn-secondary"
                            invisible="state in ['draft', 'invalid']"
                            confirm="هل أنت متأكد من إبطال هذا التوقيع؟"/>
                    <field name="state" widget="statusbar" 
                           statusbar_visible="draft,signed,verified"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button class="oe_stat_button" icon="fa-check-circle" type="object" 
                                name="action_verify" invisible="state != 'signed'">
                            <div class="o_field_widget o_stat_info">
                                <span class="o_stat_text">التحقق</span>
                            </div>
                        </button>
                    </div>
                    
                    <div class="oe_title">
                        <field name="name" class="o_text_overflow" 
                               readonly="state != 'draft'"/>
                    </div>
                    
                    <group>
                        <group>
                            <field name="document_id" readonly="state != 'draft'"/>
                            <field name="approval_request_id" readonly="state != 'draft'" 
                                   invisible="not approval_request_id"/>
                            <field name="signer_id" readonly="state != 'draft'"/>
                            <field name="signature_date" readonly="state != 'draft'"/>
                            <field name="signature_method" readonly="state != 'draft'"/>
                        </group>
                        <group>
                            <field name="is_valid" widget="boolean_toggle" readonly="1"/>
                            <field name="verification_code" readonly="state != 'draft'"/>
                            <field name="signature_hash" readonly="1" 
                                   groups="base.group_system"/>
                        </group>
                    </group>
                    
                    <notebook>
                        <page string="التوقيع الرقمي" name="signature_data">
                            <div class="row">
                                <div class="col-12">
                                    <group string="التوقيع الرقمي">
                                        <field name="signature_data" widget="signature" 
                                               readonly="state != 'draft'"
                                               class="o_signature_field"
                                               options="{'date_format': 'DD/MM/YYYY'}"
                                               nolabel="1"/>
                                    </group>
                                    <div class="alert alert-success" role="alert" invisible="not signature_data or state == 'draft'">
                                        <i class="fa fa-check-circle"/> 
                                        <strong>تم التوقيع بنجاح!</strong> 
                                        الموقع: <field name="signer_id" readonly="1" class="oe_inline"/> 
                                        التاريخ: <field name="signature_date" readonly="1" class="oe_inline"/>
                                    </div>
                                </div>
                            </div>
                            <group>
                                <field name="certificate_info" 
                                       readonly="state != 'draft'"/>
                            </group>
                        </page>
                        <page string="ملاحظات" name="notes">
                            <field name="notes" readonly="state != 'draft'"/>
                        </page>
                    </notebook>
                </sheet>
                <chatter/>
            </form>
        </field>
    </record>

    <record id="view_digital_signature_search" model="ir.ui.view">
        <field name="name">digital.signature.search</field>
        <field name="model">digital.signature</field>
        <field name="arch" type="xml">
            <search string="البحث في التوقيعات الرقمية">
                <field name="name" string="اسم التوقيع"/>
                <field name="document_id" string="الوثيقة"/>
                <field name="signer_id" string="الموقع"/>
                <field name="signature_method" string="طريقة التوقيع"/>
                
                <filter string="التوقيعات الصالحة" name="valid_signatures" 
                        domain="[('is_valid', '=', True)]"/>
                <filter string="التوقيعات غير الصالحة" name="invalid_signatures" 
                        domain="[('is_valid', '=', False)]"/>
                
                <separator/>
                <filter string="مسودة" name="draft" 
                        domain="[('state', '=', 'draft')]"/>
                <filter string="موقع" name="signed" 
                        domain="[('state', '=', 'signed')]"/>
                <filter string="محقق" name="verified" 
                        domain="[('state', '=', 'verified')]"/>
                <filter string="غير صالح" name="invalid" 
                        domain="[('state', '=', 'invalid')]"/>
                
                <separator/>
                <filter string="توقيعاتي" name="my_signatures" 
                        domain="[('signer_id', '=', uid)]"/>
                        
                <group expand="0" string="تجميع حسب">
                    <filter string="الموقع" name="group_by_signer" 
                            context="{'group_by': 'signer_id'}"/>
                    <filter string="طريقة التوقيع" name="group_by_method" 
                            context="{'group_by': 'signature_method'}"/>
                    <filter string="الحالة" name="group_by_state" 
                            context="{'group_by': 'state'}"/>
                    <filter string="تاريخ التوقيع" name="group_by_date" 
                            context="{'group_by': 'signature_date'}"/>
                </group>
            </search>
        </field>
    </record>

    <record id="view_digital_signature_kanban" model="ir.ui.view">
        <field name="name">digital.signature.kanban</field>
        <field name="model">digital.signature</field>
        <field name="arch" type="xml">
            <kanban string="التوقيعات الرقمية">
                <field name="name"/>
                <field name="document_id"/>
                <field name="signer_id"/>
                <field name="signature_date"/>
                <field name="state"/>
                <field name="is_valid"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click">
                            <div class="oe_kanban_content">
                                <div class="o_kanban_record_top">
                                    <div class="o_kanban_record_headings">
                                        <strong class="o_kanban_record_title">
                                            <field name="name"/>
                                        </strong>
                                        <br/>
                                        <small class="text-muted">
                                            <field name="document_id"/>
                                        </small>
                                    </div>
                                    <div class="o_kanban_record_top_right">
                                        <span t-attf-class="badge badge-pill 
                                            #{record.state.raw_value == 'verified' ? 'badge-success' : 
                                              record.state.raw_value == 'signed' ? 'badge-info' : 
                                              record.state.raw_value == 'draft' ? 'badge-warning' : 
                                              'badge-danger'}">
                                            <field name="state"/>
                                        </span>
                                    </div>
                                </div>
                                <div class="o_kanban_record_bottom">
                                    <div class="oe_kanban_bottom_left">
                                        <small class="text-muted">
                                            <i class="fa fa-user"/> <field name="signer_id"/>
                                        </small>
                                        <br/>
                                        <small class="text-muted">
                                            <i class="fa fa-calendar"/> <field name="signature_date"/>
                                        </small>
                                    </div>
                                    <div class="oe_kanban_bottom_right">
                                        <span t-if="record.is_valid.raw_value" 
                                              class="badge badge-success">
                                            <i class="fa fa-check"/> صالح
                                        </span>
                                        <span t-else="" class="badge badge-danger">
                                            <i class="fa fa-times"/> غير صالح
                                        </span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

</odoo>
