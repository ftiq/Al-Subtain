<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="digital_signature_wizard_form_view" model="ir.ui.view">
        <field name="name">digital.signature.wizard.form</field>
        <field name="model">digital.signature.wizard</field>
        <field name="arch" type="xml">
            <form string="التوقيع الإلكتروني">
                <header>
                    <button name="action_sign" string="توقيع" type="object" 
                            class="btn-primary" icon="fa-edit"/>
                    <button name="action_cancel" string="إلغاء" type="object" 
                            class="btn-secondary" icon="fa-times"/>
                </header>
                
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="document_id" readonly="1" 
                                   options="{'no_create': true, 'no_open': true}"/>
                        </h1>
                        <h3>
                            <span>التوقيع الإلكتروني للموافقة</span>
                        </h3>
                    </div>
                    
                    <group>
                        <group>
                            <field name="signature_id" invisible="1"/>
                            <field name="approval_required" invisible="1"/>
                            <field name="signature_method" widget="radio" 
                                   options="{'horizontal': true}"/>
                        </group>
                    </group>
                    
                    <group string="التوقيع الإلكتروني">
                        <field name="signature_data" widget="signature" 
                               options="{'width': 400, 'height': 200, 'mode': 'draw'}"
                               required="1"/>
                    </group>
                    
                    <group string="ملاحظات إضافية">
                        <field name="notes" nolabel="1" placeholder="أي ملاحظات حول هذا التوقيع..."/>
                    </group>
                    
                    <div class="alert alert-info" role="alert" invisible="not approval_required">
                        <i class="fa fa-info-circle"/> 
                        <strong>تنبيه:</strong> بعد التوقيع سيتم اعتماد الوثيقة تلقائياً. 
                        إذا لم تقم بالتوقيع، ستبقى الوثيقة في حالة المراجعة.
                    </div>
                </sheet>
            </form>
        </field>
    </record>

    <record id="digital_signature_wizard_action" model="ir.actions.act_window">
        <field name="name">التوقيع الإلكتروني</field>
        <field name="res_model">digital.signature.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <field name="context">{}</field>
    </record>
</odoo>
