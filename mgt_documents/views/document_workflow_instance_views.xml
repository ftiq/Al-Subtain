<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="document_workflow_instance_tree_view" model="ir.ui.view">
            <field name="name">document.workflow.instance.tree</field>
            <field name="model">document.workflow.instance</field>
            <field name="arch" type="xml">
                <list decoration-info="state=='running'" decoration-success="state=='completed'" decoration-muted="state=='cancelled'" decoration-warning="state=='waiting'">
                    <field name="name"/>
                    <field name="workflow_process_id"/>
                    <field name="document_id"/>
                    <field name="current_step_id"/>
                    <field name="start_date"/>
                    <field name="state" widget="badge" decoration-info="state=='running'" decoration-success="state=='completed'" decoration-warning="state=='waiting'"/>
                    <field name="priority" widget="priority"/>
                    <field name="is_overdue" invisible="1"/>
                    <field name="active_tasks_count"/>
                </list>
            </field>
        </record>


        <record id="document_workflow_instance_form_view" model="ir.ui.view">
            <field name="name">document.workflow.instance.form</field>
            <field name="model">document.workflow.instance</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                        <button name="action_complete" string="إكمال" type="object" invisible="state != 'running'" class="btn-success"/>
                        <button name="action_cancel" string="إلغاء" type="object" invisible="state not in ('initiated', 'running', 'waiting')" confirm="هل أنت متأكد من إلغاء سير العمل؟" class="btn-secondary"/>
                        <field name="state" widget="statusbar" statusbar_visible="initiated,running,waiting,completed"/>
                    </header>
                    
                    <sheet>
                        <div class="o_button_box" name="button_box">
                            <button class="o_stat_button" type="object" name="action_view_tasks" icon="fa-tasks" invisible="not active_tasks_count">
                                <field name="active_tasks_count" widget="statinfo" string="المهام النشطة"/>
                            </button>
                        </div>
                        
                        <widget name="web_ribbon" title="متأخر" bg_color="bg-danger" invisible="not is_overdue"/>
                        <widget name="web_ribbon" title="مكتمل" bg_color="bg-success" invisible="state != 'completed'"/>
                        <div class="o_title">
                            <h1>
                                <field name="name" placeholder="اسم النسخة..."/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="workflow_process_id"/>
                                <field name="document_id"/>
                                <field name="current_step_id"/>
                                <field name="current_step_name" readonly="1"/>
                            </group>
                            <group>
                                <field name="start_date"/>
                                <field name="completion_date"/>
                                <field name="due_date"/>
                                <field name="priority" widget="priority"/>
                                <field name="is_overdue" readonly="1"/>
                            </group>
                        </group>
                        
                        <notebook>
                            <page string="المهام المرتبطة" name="tasks">
                                <field name="admin_task_ids" readonly="1">
                                    <list string="المهام">
                                        <field name="name"/>
                                        <field name="task_type"/>
                                        <field name="assigned_employee_id"/>
                                        <field name="state" widget="badge"/>
                                        <field name="due_date"/>
                                    </list>
                                </field>
                            </page>
                             
                            <page string="بيانات التفعيل" name="trigger_data">
                                <group>
                                    <field name="trigger_data" readonly="1" widget="text"/>
                                </group>
                            </page>
                            
                            <page string="ملخص النتيجة" name="result">
                                <group>
                                    <field name="result_summary" nolabel="1" placeholder="ملخص موجز لنتيجة تنفيذ العملية..."/>
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                    
                    <chatter reload_on_follower="True"/>
                </form>
            </field>
        </record>

        <record id="document_workflow_instance_kanban_view" model="ir.ui.view">
            <field name="name">document.workflow.instance.kanban</field>
            <field name="model">document.workflow.instance</field>
            <field name="arch" type="xml">
                <kanban default_group_by="state" default_order="priority desc, start_date desc"
                        class="o_kanban_wide_column o_document_kanban"
                        quick_create="false" create="true">
                    <field name="id"/>
                    <field name="name"/>
                    <field name="workflow_process_id"/>
                    <field name="document_id"/>
                    <field name="state"/>
                    <field name="priority"/>
                    <field name="start_date"/>
                    <field name="is_overdue"/>
                    <field name="active_tasks_count"/>
                    <field name="activity_ids"/>
                    <field name="activity_state"/>
                    
                    <progressbar field="activity_state" 
                               colors='{"planned": "success", "today": "warning", "overdue": "danger"}'
                               help="شريط التقدم يظهر حالة الأنشطة المجدولة"/>
                    
                    <templates>
                        <t t-name="kanban-box">
                            <div class="oe_kanban_card oe_kanban_global_click" 
                                 t-attf-class="#{record.is_overdue.raw_value ? 'border-danger' : ''} #{record.state.raw_value == 'completed' ? 'border-success' : ''}">
                                
                                <div class="o_kanban_card_header">
                                    <div class="o_kanban_record_top">
                                        <div class="o_kanban_top_left">
                                            <strong class="o_kanban_record_title">
                                                <field name="name"/>
                                            </strong>
                                            <div class="text-muted">
                                                <field name="workflow_process_id"/>
                                            </div>
                                        </div>
                                        <div class="o_kanban_top_right">
                                            <field name="priority" widget="priority"/>
                                        </div>
                                    </div>
                                </div>
                                
                                <div class="o_kanban_card_content">
                                    <div class="o_kanban_record_bottom">
                                        <div class="oe_kanban_bottom_left">
                                            <div t-if="record.document_id.raw_value">
                                                <i class="fa fa-file-text-o me-1"/>
                                                <field name="document_id"/>
                                            </div>
                                            <div t-if="record.active_tasks_count.raw_value > 0">
                                                <i class="fa fa-tasks me-1"/>
                                                <t t-esc="record.active_tasks_count.value"/> مهام نشطة
                                            </div>
                                        </div>
                                        <div class="oe_kanban_bottom_right">
                                            <field name="activity_ids" widget="kanban_activity"/>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

        <record id="document_workflow_instance_search_view" model="ir.ui.view">
            <field name="name">document.workflow.instance.search</field>
            <field name="model">document.workflow.instance</field>
            <field name="arch" type="xml">
                <search>
                    <field name="name" string="الاسم" filter_domain="[('name', 'ilike', self)]"/>
                    <field name="workflow_process_id" string="العملية"/>
                    <field name="document_id" string="الوثيقة"/>
                    <field name="current_step_id" string="الخطوة الحالية"/>
                    
                    <filter string="قيد التنفيذ" name="running" domain="[('state', '=', 'running')]"/>
                    <filter string="في الانتظار" name="waiting" domain="[('state', '=', 'waiting')]"/>
                    <filter string="مكتملة" name="completed" domain="[('state', '=', 'completed')]"/>
                    <filter string="متأخرة" name="overdue" domain="[('is_overdue', '=', True)]"/>
                    <separator/>
                    
                    <filter string="عالية الأولوية" name="high_priority" domain="[('priority', 'in', ['3', '4'])]"/>
                    <filter string="لها مهام نشطة" name="with_active_tasks" domain="[('active_tasks_count', '>', 0)]"/>
                    
                    <group expand="0" string="تجميع حسب">
                        <filter string="الحالة" name="group_state" context="{'group_by': 'state'}"/>
                        <filter string="العملية" name="group_process" context="{'group_by': 'workflow_process_id'}"/>
                        <filter string="الأولوية" name="group_priority" context="{'group_by': 'priority'}"/>
                        <filter string="تاريخ البداية" name="group_start_date" context="{'group_by': 'start_date:month'}"/>
                    </group>
                </search>
            </field>
        </record>

        <record id="document_workflow_instance_action" model="ir.actions.act_window">
            <field name="name">نسخ سير العمل</field>
            <field name="res_model">document.workflow.instance</field>
            <field name="view_mode">kanban,list,form</field>
            <field name="context">{'search_default_running': 1}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    لا توجد نسخ سير عمل بعد!
                </p>
                <p>
                    سيتم إنشاء نسخ سير العمل تلقائياً عند معالجة الوثائق.
                </p>
            </field>
        </record>

    </data>
</odoo>