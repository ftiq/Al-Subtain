<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        
        <record id="res_config_settings_view_form" model="ir.ui.view">
            <field name="name">res.config.settings.view.form.inherit.mgt_documents</field>
            <field name="model">res.config.settings</field>
            <field name="priority" eval="20"/>
            <field name="inherit_id" ref="base.res_config_settings_view_form"/>
            <field name="arch" type="xml">
                <form position="inside">
                    <app string="إدارة الوثائق" name="mgt_documents">
                        <block title="إعدادات الموافقات الهرمية">
                            <setting string="النظام الهرمي للموافقات" help="تفعيل النظام الهرمي التلقائي للموافقات بناءً على الهيكل التنظيمي">
                                <field name="enable_hierarchical_approvals"/>
                                <div invisible="not enable_hierarchical_approvals">
                                    <div class="content-group">
                                        <div class="row mt16">
                                            <label for="max_approval_levels" class="col-3 o_light_label">الحد الأقصى للمستويات</label>
                                            <field name="max_approval_levels" class="col-2"/>
                                            <span class="col-7 text-muted">مستوى</span>
                                        </div>
                                        <div class="mt16">
                                            <field name="include_department_manager_first" class="oe_inline"/>
                                            <label for="include_department_manager_first">إدراج مدير القسم أولاً</label>
                                        </div>
                                        <div class="mt16">
                                            <field name="documents_escalation_enabled" class="oe_inline"/>
                                            <label for="documents_escalation_enabled">تفعيل التصعيد التلقائي</label>
                                        </div>
                                        <div class="row mt16" invisible="not documents_escalation_enabled">
                                            <label for="documents_escalation_days" class="col-3 o_light_label">أيام التصعيد</label>
                                            <field name="documents_escalation_days" class="col-2"/>
                                            <span class="col-7 text-muted">أيام</span>
                                        </div>
                                    </div>
                                </div>
                            </setting>
                            
                            <setting string="نظام الموافقات العام" help="تفعيل أو إلغاء تفعيل نظام الموافقات للوثائق">
                                <field name="documents_approvals_settings"/>
                            </setting>
                            

                        </block>
                        
                        <block title="إعدادات الأرشفة">
                            <setting string="الأرشفة التلقائية" help="تفعيل الأرشفة التلقائية للوثائق المعتمدة">
                                <field name="documents_auto_archive_enabled"/>
                                <div class="row mt16" invisible="not documents_auto_archive_enabled">
                                    <label for="documents_auto_archive_days" class="col-3 o_light_label"/>
                                    <field name="documents_auto_archive_days" class="col-2"/>
                                    <span class="col-7 text-muted">يوم بعد الاعتماد</span>
                                </div>
                            </setting>
                        </block>
                        
                        <block title="إعدادات الإشعارات">
                            <setting string="إشعارات الوثائق" help="إرسال إشعارات للمستخدمين عند تغيير حالة الوثائق">
                                <field name="documents_notification_enabled"/>
                            </setting>
                            
                        </block>
                    </app>
                </form>
            </field>
        </record>
        
    </data>
</odoo>
