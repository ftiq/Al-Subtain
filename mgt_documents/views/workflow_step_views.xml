<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        
        <record id="view_workflow_step_tree" model="ir.ui.view">
            <field name="name">workflow.step.tree</field>
            <field name="model">workflow.step</field>
            <field name="type">list</field>
            <field name="arch" type="xml">
                <list string="خطوات العملية" editable="bottom">
                    <field name="sequence" widget="handle"/>
                    <field name="name"/>
                    <field name="step_type"/>
                    <field name="responsible_type"/>
                    <field name="responsible_user_id" invisible="responsible_type != 'specific_user'"/>
                    <field name="responsible_department_id" invisible="responsible_type != 'department'"/>
                    <field name="estimated_hours" widget="float_time"/>
                    <field name="deadline_hours" widget="float_time"/>
                    <field name="is_mandatory"/>
                    <field name="requires_approval"/>
                    <field name="active"/>
                </list>
            </field>
        </record>
        
        <record id="view_workflow_step_form" model="ir.ui.view">
            <field name="name">workflow.step.form</field>
            <field name="model">workflow.step</field>
            <field name="arch" type="xml">
                <form string="خطوة العملية">
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <button name="action_toggle_active" type="object" class="oe_stat_button" 
                                    icon="fa-archive" invisible="active == True">
                                <div class="o_field_widget o_stat_info">
                                    <span class="o_stat_text">غير نشط</span>
                                </div>
                            </button>
                            <button name="action_toggle_active" type="object" class="oe_stat_button" 
                                    icon="fa-check-circle" invisible="active == False">
                                <div class="o_field_widget o_stat_info">
                                    <span class="o_stat_text">نشط</span>
                                </div>
                            </button>
                        </div>
                        
                        <div class="oe_title">
                            <h1>
                                <field name="name" placeholder="اسم الخطوة"/>
                            </h1>
                        </div>
                        
                        <group>
                            <group name="basic_info">
                                <field name="process_id"/>
                                <field name="sequence"/>
                                <field name="step_type"/>
                                <field name="is_mandatory"/>
                                <field name="requires_approval"/>
                            </group>
                            <group name="timing">
                                <field name="estimated_hours" widget="float_time"/>
                                <field name="deadline_hours" widget="float_time"/>
                                <field name="active"/>
                            </group>
                        </group>
                        
                        <group string="المسؤولية">
                            <field name="responsible_type"/>
                            <field name="responsible_user_id" invisible="responsible_type != 'specific_user'"/>
                            <field name="responsible_department_id" invisible="responsible_type != 'department'"/>
                            <field name="responsible_role" invisible="responsible_type != 'role'"/>
                        </group>
                        
                        <notebook>
                            <page string="الوصف والتعليمات" name="description">
                                <field name="description" nolabel="1" placeholder="وصف تفصيلي لما يجب عمله في هذه الخطوة..."/>
                            </page>
                            
                            <page string="الشروط" name="conditions">
                                <group>
                                    <group string="الشروط المطلوبة">
                                        <field name="required_conditions" nolabel="1" placeholder="الشروط التي يجب توفرها لتنفيذ الخطوة..."/>
                                    </group>
                                    <group string="شروط التخطي">
                                        <field name="skip_conditions" nolabel="1" placeholder="الشروط التي تسمح بتخطي هذه الخطوة..."/>
                                    </group>
                                </group>
                            </page>
                            
                            <page string="الخطوات التالية" name="next_steps">
                                <field name="next_step_ids">
                                    <list>
                                        <field name="name"/>
                                        <field name="step_type"/>
                                        <field name="responsible_type"/>
                                        <field name="is_mandatory"/>
                                    </list>
                                </field>
                            </page>
                            
                            <page string="الإشعارات" name="notifications">
                                <group>
                                    <field name="send_notification"/>
                                    <field name="notification_template_id" invisible="send_notification == False"/>
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                    <chatter/>
                </form>
            </field>
        </record>
        
        <record id="view_workflow_step_search" model="ir.ui.view">
            <field name="name">workflow.step.search</field>
            <field name="model">workflow.step</field>
            <field name="arch" type="xml">
                <search string="البحث في خطوات العملية">
                    <field name="name"/>
                    <field name="process_id"/>
                    <field name="step_type"/>
                    <field name="responsible_user_id"/>
                    <field name="responsible_department_id"/>
                    
                    <filter string="نشطة" name="active_steps" domain="[('active', '=', True)]"/>
                    <filter string="غير نشطة" name="inactive_steps" domain="[('active', '=', False)]"/>
                    <filter string="إجبارية" name="mandatory_steps" domain="[('is_mandatory', '=', True)]"/>
                    <filter string="تتطلب موافقة" name="approval_required" domain="[('requires_approval', '=', True)]"/>
                    
                    <separator/>
                    <filter string="مهام المستخدم" name="user_tasks" domain="[('step_type', '=', 'manual')]"/>
                    <filter string="مهام تلقائية" name="automatic_tasks" domain="[('step_type', '=', 'automatic')]"/>
                    <filter string="موافقات" name="approvals" domain="[('step_type', '=', 'approval')]"/>
                    
                    <group expand="1" string="تجميع حسب">
                        <filter string="العملية" name="group_by_process" context="{'group_by': 'process_id'}"/>
                        <filter string="نوع الخطوة" name="group_by_type" context="{'group_by': 'step_type'}"/>
                        <filter string="نوع المسؤولية" name="group_by_responsibility" context="{'group_by': 'responsible_type'}"/>
                        <filter string="القسم المسؤول" name="group_by_department" context="{'group_by': 'responsible_department_id'}"/>
                    </group>
                </search>
            </field>
        </record>
        
                
    </data>
</odoo>