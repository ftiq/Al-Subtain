<odoo>
    <template id="website_appointment_custom_form" inherit_id="appointment.appointment_form">
        <xpath expr="//form//div[@class='o_appointment_form_fields']" position="inside">
            <t t-if="appointment_type.product_id">
                <input type="hidden" name="product_id" t-att-value="appointment_type.product_id.id"/>
            </t>
            <t t-if="appointment_type.allow_attachment">
                <div class="form-group">
                    <label for="attachment_file">Upload File (optional)</label>
                    <input type="file" name="attachment_file" class="form-control"/>
                </div>
            </t>
        </xpath>
    </template>
</odoo>
